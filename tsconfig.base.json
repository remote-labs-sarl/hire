{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@rlrecrute/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@rlrecrute/candidate": ["libs/candidate/src/index.ts"],
      "@rlrecrute/pages/candidate": ["libs/pages/candidate/src/index.ts"],
      "@rlrecrute/pages/filters": ["libs/pages/filters/src/index.ts"],
      "@rlrecrute/pages/home": ["libs/pages/home/src/index.ts"],
      "@rlrecrute/pages/profiles": ["libs/pages/profiles/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
